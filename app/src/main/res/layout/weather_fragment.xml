<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="com.ikmr.banbara23.yaeyama_liner_checker.ui.weather.WeatherScreenViewModel"
            />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="八重山の天気"
                    android:textColor="@color/white"
                    android:textSize="@dimen/actionbar_text_size"
                    />
            </androidx.appcompat.widget.Toolbar>

            <include
                android:id="@+id/today"
                layout="@layout/weather_view"
                app:data="@{viewModel.weather.today}"
                app:titleText='@{"今日"}'
                />

            <include
                android:id="@+id/tomorrow"
                layout="@layout/weather_view"
                app:data="@{viewModel.weather.tomorrow}"
                app:titleText='@{"明日"}'
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:background="#F7A325"
                android:onClick="@{() -> viewModel.moreButtonClick()}"
                android:text="天気を詳しく見る"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </ScrollView>

</layout>
